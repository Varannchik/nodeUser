extends layout

block content
  h1= title
  p Welcome to #{title}
    //-   h2 Registration
  form(action='/api/registration' method='post')
    input(type='text' name='user' id='user' placeholder='user name')
    input(type='text' name='email' id='email' placeholder='email')
    input(type='text' name='pwd' id='pwd' placeholder='password')
    input(type="submit" value="Registration")